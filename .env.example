# PAM-Vault-Lab Environment Configuration
# Copy this file to .env and customize as needed

# Vault Configuration
VAULT_ADDR=http://localhost:8200
VAULT_API_ADDR=http://localhost:8200
VAULT_DEV_ROOT_TOKEN_ID=root-token-change-me
VAULT_DEV_LISTEN_ADDRESS=0.0.0.0:8200

# Database: PostgreSQL
POSTGRES_USER=vaultadmin
POSTGRES_PASSWORD=vaultpass123
POSTGRES_DB=testdb
POSTGRES_PORT=5432

# Database: MySQL
MYSQL_ROOT_PASSWORD=rootpass123
MYSQL_DATABASE=testdb
MYSQL_USER=vaultuser
MYSQL_PASSWORD=vaultpass123
MYSQL_PORT=3306

# SSH Target Configuration
SSH_TARGET_USER=privileged
SSH_TARGET_PASSWORD=changeme123

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Lab Settings
LAB_ENVIRONMENT=development
ENABLE_AUDIT_LOGS=true
LOG_LEVEL=info

# Vault Policies
ENABLE_ADMIN_POLICY=true
ENABLE_READONLY_POLICY=true
ENABLE_ROTATION_POLICY=true

# Rotation Settings
PASSWORD_ROTATION_INTERVAL=24h
MAX_PASSWORD_TTL=168h
DEFAULT_PASSWORD_LENGTH=32

# Security (for production hardening, not applicable in dev mode)
VAULT_DISABLE_MLOCK=true
VAULT_SKIP_VERIFY=true
