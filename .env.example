# PAM Multi-Vendor Lab Environment Configuration
# Version 2.0 - January 2026
# Copy this file to .env and customize as needed

# ============================================
# HashiCorp Vault Configuration
# ============================================
VAULT_ADDR=http://localhost:8200
VAULT_API_ADDR=http://localhost:8200
VAULT_DEV_ROOT_TOKEN_ID=root-token-change-me
VAULT_DEV_LISTEN_ADDRESS=0.0.0.0:8200
VAULT_TOKEN=
VAULT_NAMESPACE=
VAULT_SKIP_VERIFY=true

# ============================================
# Delinea Secret Server Configuration (NEW)
# ============================================
# For Cloud: https://your-tenant.secretservercloud.com
# For On-Prem: https://your-server/SecretServer
DELINEA_URL=https://your-tenant.secretservercloud.com
DELINEA_USERNAME=your-api-user
DELINEA_PASSWORD=your-api-password
DELINEA_DOMAIN=
DELINEA_TENANT=your-tenant

# Set to true to use mock data (no live server required)
DELINEA_MOCK_MODE=true

# ============================================
# AWS Secrets Manager Configuration
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Set to true to use mock data (no AWS credentials required)
AWS_MOCK_MODE=true

# ============================================
# Unified PAM Settings
# ============================================
# Default platform: vault, delinea, or aws
DEFAULT_PAM_PLATFORM=vault

# Dry run mode for migrations (true = no actual changes)
DRY_RUN=true

# ============================================
# Database: PostgreSQL
# ============================================
POSTGRES_USER=vaultadmin
POSTGRES_PASSWORD=vaultpass123
POSTGRES_DB=testdb
POSTGRES_PORT=5432

# ============================================
# Database: MySQL
# ============================================
MYSQL_ROOT_PASSWORD=rootpass123
MYSQL_DATABASE=testdb
MYSQL_USER=vaultuser
MYSQL_PASSWORD=vaultpass123
MYSQL_PORT=3306

# ============================================
# SSH Target Configuration
# ============================================
SSH_TARGET_USER=privileged
SSH_TARGET_PASSWORD=changeme123

# ============================================
# Monitoring
# ============================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ============================================
# Lab Settings
# ============================================
LAB_ENVIRONMENT=development
ENABLE_AUDIT_LOGS=true
LOG_LEVEL=INFO

# ============================================
# Vault Policies
# ============================================
ENABLE_ADMIN_POLICY=true
ENABLE_READONLY_POLICY=true
ENABLE_ROTATION_POLICY=true

# ============================================
# Rotation Settings
# ============================================
PASSWORD_ROTATION_INTERVAL=24h
MAX_PASSWORD_TTL=168h
DEFAULT_PASSWORD_LENGTH=32

# ============================================
# Security
# ============================================
VAULT_DISABLE_MLOCK=true
